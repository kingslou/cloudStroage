<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/image_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:src="@drawable/icon_tag_green" />

    <LinearLayout
        android:id="@+id/liner_first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备编号:"
                android:textColor="@color/color_action_grey"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/text_device_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="20081001"
                android:textColor="@color/color_label_black"
                android:textSize="@dimen/dimen_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信号:"
                android:textColor="@color/color_action_grey"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/text_signal_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="强"
                android:textColor="@color/color_label_black"
                android:textSize="@dimen/dimen_16" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/liner_first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="64dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒店名称:"
                android:textColor="@color/color_action_grey"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/text_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="20081001"
                android:textColor="@color/color_label_black"
                android:textSize="@dimen/dimen_16" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余燃料:"
                android:textColor="@color/color_action_grey"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/text_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="20081001"
                android:textColor="@color/color_label_black"
                android:textSize="@dimen/dimen_16" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备温度:"
                android:textColor="@color/color_action_grey"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/text_device_wd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="20081001"
                android:textColor="@color/color_label_black"
                android:textSize="@dimen/dimen_16" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
